# ============================================
# SCRYBE ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE (Railway PostgreSQL)
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ============================================
# AI (Anthropic Claude)
# ============================================
ANTHROPIC_API_KEY="sk-ant-..."

# ============================================
# VOIP (Twilio)
# ============================================
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# TRANSCRIPTION (Deepgram)
# ============================================
DEEPGRAM_API_KEY="your-deepgram-key"

# ============================================
# PAYMENTS (Stripe)
# ============================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Product IDs
STRIPE_PRODUCT_STARTER="prod_..."
STRIPE_PRODUCT_PROFESSIONAL="prod_..."
STRIPE_PRODUCT_ENTERPRISE="prod_..."
STRIPE_PRODUCT_FORMPACK_5="prod_..."
STRIPE_PRODUCT_FORMPACK_10="prod_..."
STRIPE_PRODUCT_FORMPACK_25="prod_..."

# ============================================
# ADDRESS AUTOCOMPLETE (Radar)
# ============================================
NEXT_PUBLIC_RADAR_KEY="prj_live_pk_..."
RADAR_SECRET_KEY="prj_live_sk_..."

# ============================================
# FILE SCANNING (ClamAV)
# ============================================
CLAMAV_HOST="localhost"
CLAMAV_PORT="3310"
