enum NoteTemplateScope {
  ORG
  PROGRAM
  USER
}

model NoteTemplate {
  id                 String            @id @default(uuid())
  orgId              String
  programId          String?
  userId             String?
  scope              NoteTemplateScope
  name               String
  content            String            @db.Text
  availableVariables String[]
  sessionType        String?
  isDefault          Boolean           @default(false)
  createdById        String
