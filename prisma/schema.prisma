enum ConversionSourceType {
  PHOTO
  PDF_CLEAN
  PDF_SCANNED
}

enum ConversionStatus {
  PENDING
  PROCESSING
  REVIEW_REQUIRED
  COMPLETED
  FAILED
}

model FormConversion {
  id                     String               @id @default(uuid())
  orgId                  String
  sourceType             ConversionSourceType
  sourcePath             String               // S3 path to original document
